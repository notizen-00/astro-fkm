---
import Polka from "@components/base/Polka.astro";
import Card from "@components/base/Card.astro";
---




<div x-data="swiper()" class="carousel-container">
    <div class="carousel-controls flex items-center justify-between mb-4">
        <button
            class="w-10 h-10 flex items-center justify-center rounded-xl text-muted-600 hover:text-primary-600 dark:text-muted-300 dark:hover:text-muted-100 hover:bg-muted-200 dark:hover:bg-muted-900 transition-colors duration-300"
            @click="swiper.slidePrev()"
            >
            <i class="iconify" data-icon="lucide:arrow-left"></i>
        </button>

        <button
            class="w-10 h-10 flex items-center justify-center rounded-xl text-muted-600 hover:text-primary-600 dark:text-muted-300 dark:hover:text-muted-100 hover:bg-muted-200 dark:hover:bg-muted-900 transition-colors duration-300"
            @click="swiper.slideNext()"
            >
            <i class="iconify" data-icon="lucide:arrow-right"></i>
        </button>
    </div>
    <div class="swiper-container" x-ref="container">
        <div class="swiper-wrapper">
            <!-- Slides -->
            <div class="swiper-slide">
                <div class="" x-data="posts()">
                    <template x-for="(post, index) in posts" :key="index">
                        <Card class="'p-6'">
                            <div class="w-full flex flex-col gap-8 font-sans">
                                <i class="iconify w-8 h-8 text-primary-600 dark:text-rose-500"
                                    data-icon="fa6-solid:quote-left"></i>
                                <p class="text-muted-500 dark:text-muted-300" x-html="post.content">

                                </p>
                                <div class="w-full flex items-center gap-3">
                                    <div class="shrink-0 inline-flex relative w-10 h-10">
                                        <img src="https://media.cssninja.io/shuriken/avatars/3.svg"
                                            class="object-cover max-w-full rounded-full dark:border-transparent shadow-sm"
                                            alt="User image" />
                                    </div>
                                    <div>
                                        <h4 class="font-medium text-sm text-muted-800 dark:text-muted-100"
                                            x-text="post.author.node.name">
                                            John Bingner
                                        </h4>
                                        <p class="text-xs text-muted-400">Los Angeles, CA</p>
                                    </div>
                                </div>
                            </div>
                        </Card>
                    </template>
                </div>
            </div>
        </div>
    </div>
</div>
</div>